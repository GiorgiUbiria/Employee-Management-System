@page "/identity/account/register"
@layout AuthenticationLayout
<div class="conatiner">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <EditForm Enhance Model="User" OnValidSubmit="HandleRegistration">
                <DataAnnotationsValidator/>
                <div class="card bg-dark d-flex justify-content-center" style="opacity: 0.5; backdrop-filter: blur(2px) brightness(70%); margin-top: 50%; border-radius: 10px; color:  white; font-weight: bold;">
                    <div class="card-header text-center fs-5 mb-2">Register an account</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Full Name</label>
                            <InputText @bind-Value="User.FullName" class="form-control"></InputText>
                        </div>
                        <div class="form-group mt-3">
                            <label class="form-label">Email</label>
                            <InputText @bind-Value="User.Email" class="form-control"></InputText>
                        </div>
                        <div class="form-group mt-3">
                            <label class="form-label">Password</label>
                            <InputText type="password" @bind-Value="User.Password" class="form-control"></InputText>
                        </div>
                        <div class="form-group mt-3">
                            <label class="form-label">Confirm Password</label>
                            <InputText type="password" @bind-Value="User.ConfirmPassword" class="form-control"></InputText>
                        </div>
                        <div class="form-group mt-3">
                            <button class="btn btn-outline-primary float-end" type="submit">Register</button>
                        </div>
                    </div>
                    <div class="card-footer">
                        <span class="text-center">Have an account already? | <a class="btn-link" href="identity/account/login">Sign In</a></span>
                        <ValidationSummary/>
                    </div>
                </div>
            </EditForm>
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>

@code {

    Register User = new();

    async Task HandleRegistration()
    {
        var result = await accountService.CreateAsync(User);
        if (result.Flag)
        {
            User = new();
        }
        else
        {
            
        }
    }

}